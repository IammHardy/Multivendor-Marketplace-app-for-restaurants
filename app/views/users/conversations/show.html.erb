<div class="max-w-5xl mx-auto mt-10 p-6 bg-white rounded-2xl shadow-lg">
  <!-- Conversation Header -->
  <h1 class="text-2xl font-extrabold mb-6 text-gray-900">
    Chat with <span class="text-[#F97316]"><%= @conversation.vendor.name %></span>
  </h1>

  <!-- Messages Container -->
  <div id="messages" class="h-[500px] overflow-y-auto p-6 border border-gray-200 rounded-2xl bg-gradient-to-b from-orange-50 to-yellow-50">
    <%= render partial: "messages/message", collection: @messages, as: :message %>
  </div>

  <!-- New Message Form -->
  <div id="new_message_form" class="mt-6">
    <%= form_with model: [@conversation, Message.new],
              url: users_conversation_messages_path(@conversation),
              local: false,
              data: { turbo_frame: "_top" } do |f| %>

  <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 items-stretch">
    <%= f.text_field :body,
          class: "flex-1 border border-gray-300 rounded-full px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#F97316] placeholder-gray-400",
          placeholder: "Type your message..." %>

    <%= f.submit "Send",
          class: "bg-[#F97316] hover:bg-orange-600 text-white font-semibold rounded-full px-6 py-3 shadow-md transition" %>
  </div>
<% end %>

  </div>
</div>
