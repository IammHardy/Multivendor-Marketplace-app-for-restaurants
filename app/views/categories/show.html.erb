<main class="bg-brand-white min-h-screen px-6 py-12">

  <div class="max-w-4xl mx-auto bg-white rounded-2xl shadow-lg p-8">
    <h1 class="text-3xl font-bold text-red-600 mb-6 text-center"><%= @category.name %></h1>

    <% if @category.foods.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        <% @category.foods.each do |food| %>
          <div class="bg-red-50 p-4 rounded-2xl shadow hover:shadow-lg transition flex flex-col justify-between">
            <h3 class="text-xl font-semibold text-red-600 mb-2"><%= food.name %></h3>
            <% if food.image.attached? %>
              <%= image_tag food.image, class: "w-full h-40 object-cover rounded mb-2" %>
            <% end %>
            <p class="text-gray-700 mb-2"><%= truncate(food.description, length: 80) %></p>
            <p class="font-bold mb-3">₦<%= number_to_currency(food.price, unit: "", precision: 0) %></p>

            <div class="flex flex-col space-y-2">
              <%= link_to "View", food_path(food), class: "bg-red-600 text-white py-2 rounded-lg text-center hover:bg-red-500 transition" %>
              <div class="flex justify-between">
                <%= link_to "Edit", edit_food_path(food), class: "text-yellow-500 hover:underline" %>
                <%= link_to "Delete", food_path(food), method: :delete, data: { confirm: "Are you sure you want to delete this food?" }, class: "text-red-600 hover:underline" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 text-center mt-6">No foods in this category yet.</p>
    <% end %>

    <div class="mt-8 text-center">
      <%= link_to "← Back to All Categories", root_path, class: "text-red-600 hover:underline font-semibold" %>
    </div>
  </div>

</main>
