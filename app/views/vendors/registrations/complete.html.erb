<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full bg-white shadow-lg rounded-lg p-8 text-center space-y-6">

    <!-- Success Icon -->
    <div class="flex justify-center">
      <svg class="w-16 h-16 text-green-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
      </svg>
    </div>

    <!-- Heading -->
    <h2 class="text-2xl font-bold text-gray-700">Registration Complete!</h2>

    <!-- Vendor Info -->
    <p class="text-gray-600">Thank you for registering, <span class="font-medium"><%= @vendor.name %></span>.</p>
    <p class="text-gray-500">Your account is <span class="font-semibold text-red-600">pending approval</span>.</p>

    <!-- Next Step / Login Button -->
    <div>
      <%= link_to "Go to Dashboard", vendor_dashboard_path, class: "inline-block px-6 py-2 rounded-md bg-red-600 text-white font-medium hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2" %>
    </div>

  </div>
</div>
