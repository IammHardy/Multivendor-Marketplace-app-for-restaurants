<!-- Progress Wrapper -->
<div class="w-full bg-gray-200 rounded-full h-3 mb-6 overflow-hidden">
  <!-- Progress Bar -->
  <div 
    class="h-3 bg-red-600 transition-all duration-500 ease-in-out"
    style="width: <%= (step.to_f / 4 * 100) %>%;">
  </div>
</div>

<!-- Step Text -->
<p class="text-sm font-medium text-gray-600 text-center">
  Step <%= step %> of 4
</p>
