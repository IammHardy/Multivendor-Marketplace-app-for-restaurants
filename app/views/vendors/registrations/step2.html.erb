<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-orange-50 via-orange-100 to-yellow-50 px-6 py-12">
  <div class="max-w-lg w-full bg-white shadow-xl rounded-3xl p-8 sm:p-10 space-y-8">
    
    <!-- Progress Bar -->
    <%= render "progress_bar", step: 2 %>

    <!-- Heading -->
    <h2 class="text-3xl font-extrabold text-gray-900 text-center">
      Step 2: Business Information
    </h2>
    <p class="text-center text-gray-600 text-sm">
      Tell us about your business so customers can know you better.
    </p>

    <%= form_with(model: @vendor, url: update_step2_vendor_registration_path, method: :post, local: true, html: { class: "space-y-6" }) do |f| %>
      
      <!-- Contact Person -->
      <div>
        <%= f.label :contact_person, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :contact_person, placeholder: "Full name of contact person",
              class: "w-full rounded-full border-gray-300 px-4 py-3 text-gray-800 shadow-sm focus:ring-2 focus:ring-orange-500 focus:border-orange-500 placeholder-gray-400" %>
      </div>

      <!-- Address -->
      <div>
        <%= f.label :address, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :address, placeholder: "Business address (street, area)",
              class: "w-full rounded-full border-gray-300 px-4 py-3 text-gray-800 shadow-sm focus:ring-2 focus:ring-orange-500 focus:border-orange-500 placeholder-gray-400" %>
      </div>

      <!-- City -->
      <div>
        <%= f.label :city, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :city, placeholder: "City",
              class: "w-full rounded-full border-gray-300 px-4 py-3 text-gray-800 shadow-sm focus:ring-2 focus:ring-orange-500 focus:border-orange-500 placeholder-gray-400" %>
      </div>

      <!-- State -->
      <div>
        <%= f.label :state, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :state, placeholder: "State / Region",
              class: "w-full rounded-full border-gray-300 px-4 py-3 text-gray-800 shadow-sm focus:ring-2 focus:ring-orange-500 focus:border-orange-500 placeholder-gray-400" %>
      </div>

      <!-- Business Type -->
      <div>
        <%= f.label :business_type, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :business_type, placeholder: "E.g. Restaurant, CafÃ©, Grocery",
              class: "w-full rounded-full border-gray-300 px-4 py-3 text-gray-800 shadow-sm focus:ring-2 focus:ring-orange-500 focus:border-orange-500 placeholder-gray-400" %>
      </div>

      <!-- Opening Hours -->
      <div>
        <%= f.label :opening_hours, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :opening_hours, placeholder: "E.g. Mon-Sat 9am - 9pm",
              class: "w-full rounded-full border-gray-300 px-4 py-3 text-gray-800 shadow-sm focus:ring-2 focus:ring-orange-500 focus:border-orange-500 placeholder-gray-400" %>
      </div>

      <!-- Navigation Buttons -->
      <div class="flex justify-between items-center pt-4">
        <%= link_to "Back",
              step1_vendor_registration_path,
              class: "px-6 py-2 rounded-full border border-gray-300 text-gray-700 hover:bg-gray-100 transition font-medium" %>
        
        <%= f.submit "Next",
              class: "px-6 py-2 rounded-full bg-[#F97316] hover:bg-orange-600 text-white font-semibold shadow-md transition duration-300" %>
      </div>

    <% end %>
  </div>
</div>
