<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-orange-50 via-orange-100 to-yellow-50 px-6 py-12">
  <div class="max-w-lg w-full bg-white shadow-xl rounded-3xl p-8 sm:p-10 space-y-8">

    <!-- Progress -->
    <%= render "progress_bar", step: 1 %>

    <!-- Heading -->
    <h2 class="text-3xl font-extrabold text-gray-900 text-center">
      Step 1: Account Information
    </h2>
    <p class="text-center text-gray-600 text-sm">
      Tell us a little about yourself to get started.
    </p>

    <!-- Form -->
    <%= form_with(model: @vendor, url: create_step1_vendor_registration_path, local: true, html: { class: "space-y-6" }) do |f| %>

      <!-- Name -->
      <div>
        <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :name, required: true, placeholder: "Business name",
              class: "w-full rounded-full border-gray-300 px-4 py-3 text-gray-800 shadow-sm focus:ring-2 focus:ring-orange-500 focus:border-orange-500 placeholder-gray-400" %>
      </div>

      <!-- Email -->
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.email_field :email, required: true, placeholder: "Business email",
              class: "w-full rounded-full border-gray-300 px-4 py-3 text-gray-800 shadow-sm focus:ring-2 focus:ring-orange-500 focus:border-orange-500 placeholder-gray-400" %>
      </div>

      <!-- Password -->
      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.password_field :password, required: true, placeholder: "Choose a strong password",
              class: "w-full rounded-full border-gray-300 px-4 py-3 text-gray-800 shadow-sm focus:ring-2 focus:ring-orange-500 focus:border-orange-500 placeholder-gray-400" %>
      </div>

      <!-- Phone -->
      <div>
        <%= f.label :phone, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :phone, required: true, placeholder: "Business phone number",
              class: "w-full rounded-full border-gray-300 px-4 py-3 text-gray-800 shadow-sm focus:ring-2 focus:ring-orange-500 focus:border-orange-500 placeholder-gray-400" %>
      </div>
              <div class="mt-4">
  <%= f.check_box :terms_accepted, required: true %>
  <%= f.label :terms_accepted do %>
    I agree to the
    <%= link_to "Terms & Conditions", terms_path, target: "_blank", class: "text-blue-600 underline" %>

  <% end %>
  <% if @vendor.errors[:terms_accepted].any? %>
    <div class="text-red-500 text-sm mt-1"><%= @vendor.errors[:terms_accepted].first %></div>
  <% end %>
</div>

      <!-- Next Button -->
      <div>
        <%= f.submit "Next",
              class: "w-full bg-[#F97316] hover:bg-orange-600 text-white font-semibold py-3 rounded-full shadow-md transition duration-300" %>
      </div>

    <% end %>
  </div>
</div>
