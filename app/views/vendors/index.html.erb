<h1 class="text-3xl font-bold mb-6 text-center">Our Vendors</h1>
<div class="grid md:grid-cols-3 gap-6">
  <% @vendors.each do |vendor| %>
    <div class="bg-white p-4 rounded shadow hover:shadow-lg cursor-pointer" onclick="window.location='<%= vendor_path(vendor) %>'">
      <h2 class="font-bold text-xl mb-2"><%= vendor.name %></h2>
      <p class="text-gray-600"><%= vendor.bio.presence || "No description available" %></p>

    </div>
  <% end %>
</div>
