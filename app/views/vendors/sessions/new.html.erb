<main class="min-h-screen flex items-center justify-center bg-gradient-to-br from-orange-50 via-orange-100 to-yellow-50 px-6">
  <div class="w-full max-w-md bg-white rounded-3xl shadow-lg p-8 sm:p-10 space-y-6">
    
    <!-- Heading -->
    <h2 class="text-3xl font-extrabold text-center text-gray-900">
      Vendor Login
    </h2>
    <p class="text-center text-gray-600">
      Welcome back! Please enter your details.
    </p>

    <!-- Form -->
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      
      <!-- Email -->
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full rounded-full border border-gray-300 px-4 py-3 text-gray-800 shadow-sm focus:ring-2 focus:ring-brand-orange focus:border-brand-orange placeholder-gray-400" %>
      </div>

      <!-- Password -->
      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password",
              class: "w-full rounded-full border border-gray-300 px-4 py-3 text-gray-800 shadow-sm focus:ring-2 focus:ring-brand-orange focus:border-brand-orange placeholder-gray-400" %>
      </div>

      <!-- Remember Me -->
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-orange-600 focus:ring-orange-500 border-gray-300 rounded" %>
          <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-700" %>
        </div>
      <% end %>

      <!-- Submit -->
      <div>
        <%= f.submit "Log in", 
              class: "w-full bg-[#F97316] hover:bg-orange-600 text-white font-semibold py-3 rounded-full shadow-md transition duration-300" %>
      </div>
    <% end %>

    <!-- Additional Links -->
    <div class="mt-6 text-center text-sm text-gray-600">
      <%= render "vendors/shared/links" %>
    </div>

  </div>
</main>
