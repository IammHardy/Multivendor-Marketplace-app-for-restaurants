      <% steps = [
        { icon: "fa-solid fa-store",        title: "Browse Vendors", text: "Explore top-rated vendors near you." },
        { icon: "fa-solid fa-utensils",     title: "Browse Menu",    text: "See delicious meals from each vendor." },
