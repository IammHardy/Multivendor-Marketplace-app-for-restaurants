<!-- Hero Section -->
<section class="hero">
  <div class="hero-overlay">
    <div class="hero-content">
      <h1>Welcome to FoodApp üç≤</h1>
      <p>Delicious Nigerian dishes delivered fresh to your door.</p>
      <% if user_signed_in? %>
        <%= link_to "Browse Foods", foods_path, class: "btn btn-primary" %>

        <%= link_to "View Cart", cart_path, class: "btn btn-secondary" %>
      <% else %>
        <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary" %>
        <%= link_to "Log In", new_user_session_path, class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</section>

<!-- Popular Dishes -->
<section class="section-light">
  <h2 class="section-title">Popular Nigerian Dishes</h2>
  <div class="scroll-container">
    <% Food.limit(10).each do |food| %>
      <%= link_to food_path(food), class: "dish-card-link" do %>
        <div class="dish-card">
          <% if food.image.attached? %>
            <%= image_tag url_for(food.image), class: "dish-img" %>
          <% else %>
            <div class="dish-placeholder">No Image</div>
          <% end %>
          <p class="dish-name"><%= food.name %></p>
        </div>
      <% end %>
    <% end %>
    
  </div>
  <!-- View All link at the bottom -->
  <div class="view-all-link" style="margin-top: 20px; text-align: center;">
    <%= link_to "View All", foods_path, class: "btn btn-primary" %>
  </div>
</section>

<!-- How It Works -->
<section class="section-light alt">
  <h2 class="section-title">How It Works</h2>
  <div class="how-it-works">
    <div class="step">
      <h3>1. Browse</h3>
      <p>Explore authentic Nigerian meals.</p>
    </div>
    <div class="step">
      <h3>2. Order</h3>
      <p>Add your favorite dishes to the cart and checkout.</p>
    </div>
    <div class="step">
      <h3>3. Enjoy</h3>
      <p>Get freshly prepared meals delivered to your doorstep.</p>
    </div>
  </div>
</section>

