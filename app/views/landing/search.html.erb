<div class="max-w-7xl mx-auto px-6 py-12">
  <h2 class="text-2xl font-bold mb-6">Search Results</h2>

  <div class="grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    <% if @results.any? %>
      <% @results.each do |food| %>
        <div class="bg-white rounded-3xl shadow-md p-4 relative">
          <!-- Food Image -->
          <% if food.image.attached? %>
            <%= image_tag food.image, class: "w-full h-40 object-cover rounded-2xl mb-2" %>
          <% end %>

          <!-- Food Name -->
          <h3 class="font-semibold text-gray-800"><%= food.name %></h3>

          <!-- Price -->
          <p class="text-gray-600 mt-1">₦<%= food.price %></p>

          <!-- Vendor -->
          <%= link_to food.vendor.name, public_vendor_path(food.vendor),
                class: "text-orange-500 mt-2 block" %>
        </div>
      <% end %>
    <% else %>
      <p class="text-gray-500 col-span-full">No results found.</p>
    <% end %>
  </div>

  <div class="mt-6">
    <%= link_to "← Back to Search", root_path, class: "text-orange-500 font-semibold" %>
  </div>
</div>
