<div class="max-w-lg mx-auto mt-12 bg-white shadow-md rounded-2xl p-8">
  <div class="mb-6">
    <div class="w-full bg-gray-200 rounded-full h-2">
      <div class="bg-orange-500 h-2 rounded-full w-1/2"></div>
    </div>
    <p class="text-sm text-gray-600 mt-2 text-center">Step 2 of 4 — Vehicle Info</p>
  </div>

  <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Vehicle Information</h2>

  <%= form_with model: @rider, url: step2_rider_registration_path, method: :patch, local: true do |f| %>
    <div class="space-y-4">
      <div>
        <%= f.label :vehicle_type, "Vehicle Type", class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :vehicle_type, ["Motorbike", "Car", "Tricycle"], prompt: "Select type", class: "w-full border-gray-300 rounded-lg p-2 focus:ring-orange-500 focus:border-orange-500" %>
      </div>

      <div>
        <%= f.label :license_plate, "License Plate Number", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :license_plate, class: "w-full border-gray-300 rounded-lg p-2 focus:ring-orange-500 focus:border-orange-500" %>
      </div>
    </div>

    <div class="mt-6 flex justify-between">
      <%= link_to "← Back", step1_rider_registration_path, class: "text-gray-600 hover:text-gray-800 font-semibold" %>
      <%= f.submit "Next Step →", class: "bg-orange-500 hover:bg-orange-600 text-white font-semibold py-2 px-4 rounded-lg" %>
    </div>
  <% end %>
</div>
