<!-- app/views/riders/registrations/step3.html.erb -->
<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-orange-50 to-yellow-100 py-10 px-4">
  <div class="bg-white shadow-xl rounded-2xl w-full max-w-lg p-8">
    <h2 class="text-3xl font-extrabold text-center text-orange-600 mb-6">Step 3: Banking Information</h2>

    <%= form_for @rider, url: step3_rider_registration_path, method: :patch, html: { class: "space-y-5" } do |f| %>

      <div>
        <%= f.label :address, "Residential Address", class: "block text-gray-700 font-medium mb-1" %>
        <%= f.text_field :address, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-orange-400 focus:outline-none" %>
      </div>

      <div>
        <%= f.label :state, "State of Residence", class: "block text-gray-700 font-medium mb-1" %>
        <%= f.text_field :state, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-orange-400 focus:outline-none" %>
      </div>
      <div>
        <%= f.label :city, "City", class: "block text-gray-700 font-medium mb-1" %>
        <%= f.text_field :city, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-orange-400 focus:outline-none" %>
      </div>
      
        <div>
        <%= f.label :bank_name, "Bank Name", class: "block text-gray-700 font-medium mb-1" %>
        <%= f.text_field :bank_name, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-orange-400 focus:outline-none" %>
      </div>

      <div>
        <%= f.label :account_number, "Account Number", class: "block text-gray-700 font-medium mb-1" %>
        <%= f.text_field :account_number, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-orange-400 focus:outline-none" %>
      </div>

      <div>
        <%= f.label :account_name, "Account Name", class: "block text-gray-700 font-medium mb-1" %>
        <%= f.text_field :account_name, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-orange-400 focus:outline-none" %>
      </div>

      <div class="pt-4 flex justify-between items-center">
        <%= link_to "← Back", step2_rider_registration_path, class: "text-orange-600 font-medium hover:underline" %>
        <%= f.submit "Next Step →", class: "bg-orange-500 text-white font-semibold px-6 py-2 rounded-lg hover:bg-orange-600 transition-all" %>
      </div>

    <% end %>
  </div>
</div>
