<div class="min-h-screen flex bg-gray-100">

  <!-- Main Content -->
  <main class="flex-1 p-6">

    <h1 class="text-2xl font-bold text-red-600 mb-6">Vendor Dashboard</h1>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
      <div class="bg-white shadow rounded-lg p-6 flex flex-col items-center border-t-4 border-red-500">
        <h2 class="text-gray-500 font-medium">Total Foods</h2>
        <p class="text-2xl font-bold text-red-600 mt-2"><%= @foods_count %></p>
      </div>

      <div class="bg-white shadow rounded-lg p-6 flex flex-col items-center border-t-4 border-blue-500">
        <h2 class="text-gray-500 font-medium">Total Orders</h2>
        <p class="text-2xl font-bold text-blue-600 mt-2"><%= @orders_count %></p>
      </div>

      <div class="bg-white shadow rounded-lg p-6 flex flex-col items-center border-t-4 border-green-500">
        <h2 class="text-gray-500 font-medium">Your Earnings</h2>
        <p class="text-2xl font-bold text-green-600 mt-2">₦<%= number_with_precision(@earnings, precision: 2) %></p>
      </div>

      <div class="bg-white shadow rounded-lg p-6 flex flex-col items-center border-t-4 border-yellow-500">
        <h2 class="text-gray-500 font-medium">Platform Commission</h2>
        <p class="text-2xl font-bold text-yellow-500 mt-2">₦<%= number_with_precision(@commission, precision: 2) %></p>
      </div>
    </div>

    <!-- Recent Orders Table -->
    <div class="bg-white shadow rounded-lg p-6">
      <h3 class="text-lg font-bold text-gray-700 mb-4">Recent Orders</h3>
      <table class="min-w-full divide-y divide-gray-200">
        <thead>
          <tr class="bg-gray-50">
            <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Order #</th>
            <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Customer</th>
            <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Total</th>
            <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Status</th>
            <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Date</th>
            <th class="px-4 py-2 text-center text-sm font-medium text-gray-500">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @recent_orders.each do |order| %>
            <tr>
              <td class="px-4 py-2"><%= order.id %></td>
              <td class="px-4 py-2"><%= order.user.name %></td>
              <td class="px-4 py-2">
                ₦<%= order.order_items.where(vendor_id: current_vendor.id).sum(:price) %>
              </td>
              <td class="px-4 py-2">
                <% status_class = case order.status
                                  when "pending" then "bg-yellow-100 text-yellow-800"
                                  when "completed" then "bg-green-100 text-green-800"
                                  when "cancelled" then "bg-red-100 text-red-800"
                                  else "bg-gray-100 text-gray-800"
                                  end %>
                <span class="px-2 py-1 rounded-full text-xs font-semibold <%= status_class %>">
                  <%= order.status.capitalize %>
                </span>
              </td>
              <td class="px-4 py-2"><%= order.created_at.strftime("%b %d, %Y") %></td>
              <td class="px-4 py-2 text-center">
                <%= link_to "View", vendor_order_path(order), class: "text-red-600 hover:underline" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="mt-4 text-right">
        <%= link_to "View All Orders", vendor_orders_path, class: "text-red-600 hover:underline font-medium" %>
      </div>
    </div>

  </main>
</div>
