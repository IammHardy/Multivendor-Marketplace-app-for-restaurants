<div class="min-h-screen bg-orange-50 py-12">
  <main class="max-w-3xl mx-auto px-6">

    <!-- Page Title -->
    <h1 class="text-3xl font-extrabold text-brand-orange mb-8 text-center">
      Edit Vendor Profile
    </h1>

    <div class="bg-white rounded-3xl shadow-md p-8">
      <%= form_with model: @vendor, url: vendor_path(@vendor), method: :patch, local: true, class: "space-y-6" do |f| %>

        <!-- Name -->
        <div>
          <%= f.label :name, class: "block text-gray-700 font-semibold mb-2" %>
          <%= f.text_field :name, class: "w-full rounded-xl border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-orange-300 focus:border-orange-400" %>
        </div>

        <!-- Profile Image -->
        <div>
          <%= f.label :profile_image, class: "block text-gray-700 font-semibold mb-2" %>
          <%= f.file_field :profile_image, class: "w-full text-gray-700" %>
          <% if @vendor.profile_image.attached? %>
            <div class="mt-2">
              <p class="text-gray-500 text-sm mb-1">Current Image:</p>
              <%= image_tag @vendor.profile_image, class: "w-32 h-32 object-cover rounded-xl shadow-md" %>
            </div>
          <% end %>
        </div>

        <!-- Description -->
        <div>
          <%= f.label :description, class: "block text-gray-700 font-semibold mb-2" %>
          <%= f.text_area :description, rows: 4, class: "w-full rounded-xl border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-orange-300 focus:border-orange-400" %>
        </div>

        <!-- Submit Button -->
        <div class="text-center">
          <%= f.submit "Update Profile", class: "bg-[#F97316] hover:bg-orange-600 text-white font-bold px-8 py-3 rounded-full shadow-md transition transform hover:-translate-y-1" %>
        </div>

      <% end %>
    </div>

  </main>
</div>
