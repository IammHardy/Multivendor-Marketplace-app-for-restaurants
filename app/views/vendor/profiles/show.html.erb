<h1>My Profile</h1>

<p><strong>Name:</strong> <%= @vendor.name %></p>
<p><strong>Email:</strong> <%= @vendor.email %></p>
<p><strong>Bio:</strong> <%= @vendor.bio %></p>
<% if @vendor.profile_image.attached? %>
  <%= image_tag @vendor.profile_image.variant(resize_to_limit: [150, 150]) %>
<% end %>

<%= link_to "Edit Profile", edit_vendor_profile_path, class: "btn" %>
<%= link_to "Change Password", edit_vendor_profile_path, class: "btn" %>
