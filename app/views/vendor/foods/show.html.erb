<main class="max-w-3xl mx-auto px-6 py-8 bg-white rounded-2xl shadow-lg">
  <%= image_tag @food.image.attached? ? @food.image : "default-food.jpg", class: "w-full h-64 object-cover rounded mb-4" %>
  <h1 class="text-3xl font-bold mb-2"><%= @food.name %></h1>
  <p class="text-gray-700 mb-4"><%= @food.description %></p>
  <p class="text-red-600 font-bold mb-4">$<%= @food.price %></p>

  <%= form_with url: cart_path(food_id: @food.id), method: :post, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :quantity, "Quantity", class: "block mb-1" %>
      <%= f.number_field :quantity, value: 1, min: 1, class: "border rounded px-3 py-1 w-20" %>
    </div>
    <%= f.submit "Add to Cart", class: "bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700" %>
  <% end %>

  <%= link_to "Proceed to Checkout", checkout_path, class: "inline-block mt-4 bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700" %>
</main>
