<h1 class="text-4xl font-extrabold text-center mb-10 text-[#F97316]">
  My Orders
</h1>

<div class="mb-8 text-center">
  <%= link_to "← Back to Food", public_foods_path,
      class: "inline-block bg-gradient-to-r from-gray-600 to-gray-700 hover:from-gray-700 hover:to-gray-800 text-[#F97316] px-6 py-2 rounded-full shadow-md transition" %>
</div>

<% if @orders.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <% @orders.each do |order| %>
      <div class="bg-white rounded-2xl shadow-md border border-orange-100 p-6 hover:shadow-lg transition transform hover:-translate-y-1">
        <!-- Order ID -->
        <p class="text-sm font-medium text-gray-500 mb-2">
          Order ID: <span class="text-gray-800 font-semibold">#<%= order.id %></span>
        </p>

        <!-- Status Badge -->
        <p class="mb-3">
          <strong class="text-gray-700">Status:</strong>
          <span class="ml-2 inline-block px-4 py-1.5 rounded-full text-white font-semibold text-xs tracking-wide
            <%= case order.status.downcase
                when "pending" then "bg-yellow-400"
                when "processing" then "bg-blue-500"
                when "delivered" then "bg-green-500"
                else "bg-gray-400"
                end %>">
            <%= order.status.capitalize %>
          </span>
        </p>

        <!-- Total -->
        <p class="mb-2 text-gray-700">
          <strong>Total:</strong>
          <span class="text-[#F97316] font-bold text-lg">
            ₦<%= number_to_currency(order.order_items.sum { |i| i.food.price * i.quantity }, unit: "", precision: 2) %>
          </span>
        </p>

        <!-- Date -->
        <p class="mb-4 text-sm text-gray-500">
          <strong>Placed At:</strong> <%= order.created_at.strftime("%B %d, %Y %H:%M") %>
        </p>

        <!-- Action -->
        <%= link_to "View Details", order_path(order),
            class: "inline-block w-full text-center bg-gradient-to-r from-orange-500 to-orange-600 hover:from-orange-600 hover:to-orange-700 text-white px-5 py-2.5 rounded-full font-medium shadow-md transition" %>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-20 bg-gradient-to-b from-orange-50 to-yellow-50 rounded-3xl shadow-md">
    <p class="text-gray-600 text-lg font-medium mb-4">You haven't placed any orders yet.</p>
    <%= link_to "Start Ordering →", public_foods_path,
        class: "inline-block bg-[#F97316] hover:from-orange-600 hover:to-orange-700 text-white px-6 py-3 rounded-full shadow-md font-semibold transition" %>
  </div>
<% end %>
