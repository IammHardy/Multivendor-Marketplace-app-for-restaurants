<div class="p-8 bg-gray-50 min-h-screen">
  <!-- Rider Profile -->
  <div class="bg-white shadow-md rounded-xl p-6 flex items-center space-x-6 mb-8 max-w-4xl mx-auto">
    <div class="w-24 h-24 rounded-full overflow-hidden border-2 border-orange-500">
      <% if current_rider.photo.attached? %>
        <%= image_tag current_rider.photo.variant(resize_to_fill: [96, 96]), class: "w-full h-full object-cover" %>
      <% else %>
        <img src="https://via.placeholder.com/96" alt="Rider Photo" class="w-full h-full object-cover">
      <% end %>
    </div>
    <div>
      <h2 class="text-2xl font-bold text-orange-600"><%= current_rider.name %></h2>
      <p class="text-gray-700"><strong>Phone:</strong> <%= current_rider.phone %></p>
      <p class="text-gray-700"><strong>Vehicle:</strong> <%= current_rider.vehicle_type.presence || '-' %></p>
      <p class="text-gray-700"><strong>License Plate:</strong> <%= current_rider.license_plate.presence || '-' %></p>
      <p class="mt-1">
        <% if current_rider.verified? %>
          <span class="bg-green-100 text-green-700 px-3 py-1 rounded-full text-sm font-semibold">Verified ✅</span>
        <% else %>
          <span class="bg-gray-100 text-gray-500 px-3 py-1 rounded-full text-sm">Not Verified ❌</span>
        <% end %>
      </p>
    </div>
  </div>

  <!-- Orders Table -->
  <div class="bg-white shadow-md rounded-xl p-6 max-w-6xl mx-auto">
    <h1 class="text-3xl font-extrabold text-orange-600 mb-6">Your Orders</h1>

    <% if @orders.any? %>
      <table class="w-full border-collapse">
        <thead class="bg-orange-500 text-white">
          <tr>
            <th class="py-3 px-4 text-left">Order #</th>
            <th class="py-3 px-4 text-left">Customer</th>
            <th class="py-3 px-4 text-left">Address</th>
            <th class="py-3 px-4 text-left">Status</th>
            <th class="py-3 px-4 text-center">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr id="order-<%= order.id %>" data-order-id="<%= order.id %>">
              <td class="py-3 px-4 font-medium"><%= order.order_number || "ORD-#{order.id}" %></td>
              <td class="py-3 px-4"><%= order.name %></td>
              <td class="py-3 px-4"><%= order.address %></td>
              <td class="py-3 px-4 font-semibold">
                <% case order.delivery_status %>
                <% when "pending" %>
                  <span class="text-yellow-600 font-bold">Pending</span>
                <% when "assigned" %>
                  <span class="text-blue-600 font-bold">Accepted</span>
                <% when "picked_up" %>
                  <span class="text-orange-600 font-bold">In Progress</span>
                <% when "delivered" %>
                  <span class="text-green-600 font-bold">Completed</span>
                <% end %>
              </td>
              <td>
  <% if order.delivery_status_pending? %>
  <%= button_to "Accept", rider_dashboard_accept_order_path(order), method: :patch %>
<% elsif order.delivery_status_assigned? %>
  <%= button_to "Start Delivery", rider_dashboard_start_order_path(order), method: :patch %>
<% elsif order.delivery_status_picked_up? %>
  <%= button_to "Complete Delivery", rider_dashboard_complete_order_path(order), method: :patch %>
<% end %>



</td>

            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-gray-500 text-center py-6">You currently have no active orders.</p>
    <% end %>
  </div>

  <!-- Live Location Tracking -->
  <script>
  function sendLocation() {
    // find the first order row (or active one)
    const activeOrder = document.querySelector('tr[data-active="true"]') || document.querySelector('tr[data-order-id]');
    if (!activeOrder) return;

    if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(function(position) {
        fetch('/rider_dashboard/locations/update', {
          method: 'PATCH',
          credentials: 'same-origin',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
          },
          body: JSON.stringify({
            latitude: position.coords.latitude,
            longitude: position.coords.longitude,
            order_id: activeOrder.dataset.orderId
          })
        }).then(res => res.json())
          .then(data => console.log("Location updated:", data))
          .catch(err => console.error("Error updating location:", err));
      }, function(error) {
        console.error("Geolocation error:", error);
      });
    } else {
      console.error("Geolocation not supported by this browser.");
    }
  }

  // send every 5 seconds
  setInterval(sendLocation, 5000);
</script>

</div>
