<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Food App" %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- CSS -->
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

    <!-- JS -->
    <%= javascript_include_tag "application", type: "module", "data-turbo-track": "reload" %>

    <!-- Icons + Fonts -->
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="apple-touch-icon" href="/icon.png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.5.1/css/all.min.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css">
  </head>

  <body class="bg-gray-50 text-gray-800 font-sans">

    <!-- ✅ Make header persistent across Turbo page loads -->
    <turbo-frame id="navbar" data-turbo-permanent>
      <header  data-controller="menu" class="bg-[#F97316] text-white shadow sticky top-0 z-50" data-controller="menu">
        <div class="max-w-6xl mx-auto flex items-center justify-between px-4 h-20 relative">

          <!-- Logo -->
          <%= link_to root_path, class: "text-3xl font-extrabold tracking-wide text-white" do %>
            FoodApp
          <% end %>

          <!-- Desktop Navigation -->
          <nav  class="hidden lg:flex gap-6 items-center">
            <%= link_to "Home", root_path, class: "hover:text-[#FACC15] font-medium transition-colors" %>
            <%= link_to "Browse Menu", public_foods_path, class: "hover:text-[#FACC15] font-bold transition-colors" %>

            <% if rider_signed_in? %>
              <%= link_to "Rider Dashboard", rider_dashboard_path, class: "hover:text-[#FACC15]" %>
              <%= button_to "Logout", destroy_rider_session_path, method: :delete, form_class: "inline", class: "hover:text-[#FACC15]" %>
            <% elsif user_signed_in? %>
              <%= link_to "My Orders", orders_path, class: "hover:text-[#FACC15]" %>
              <%= link_to "Conversations", users_conversations_path, class: "hover:text-[#FACC15]" %>
              <%= button_to "Logout", destroy_user_session_path, method: :delete, form_class: "inline", class: "hover:text-[#FACC15]" %>
            <% elsif vendor_signed_in? %>
              <%= link_to "Vendor Dashboard", vendor_dashboard_path, class: "hover:text-[#FACC15]" %>
              <%= button_to "Logout", destroy_vendor_session_path, method: :delete, form_class: "inline", class: "hover:text-[#FACC15]" %>
            <% else %>
              <%= link_to "Login", new_user_session_path, class: "hover:text-[#FACC15]" %>
              <%= link_to "Sign Up", new_user_registration_path, class: "hover:text-[#FACC15]" %>
            <% end %>

            <!-- Cart -->
            <div id="cart-count">
              <% if current_cart.present? && current_cart.cart_items.any? %>
                <%= link_to cart_path, class: "relative hover:text-[#FACC15]" do %>
                  <i class="fas fa-shopping-cart text-lg"></i>
                  <%= render "carts/cart_count", cart: current_cart %>
                <% end %>
              <% else %>
                <%= link_to cart_path, class: "relative hover:text-[#FACC15]" do %>
                  <i class="fas fa-shopping-cart text-lg"></i>
                <% end %>
              <% end %>
            </div>
          </nav>

          <!-- Mobile toggle -->
          <button
            data-menu-target="button"
            data-action="click->menu#toggle"
            class="lg:hidden p-2 focus:outline-none">
            <i class="fas fa-bars"></i>
          </button>

          <!-- Mobile menu -->
          <nav
             data-menu-target="menu"
            class="hidden absolute top-full right-0 left-0 bg-white shadow-lg z-50 flex flex-col gap-1 p-4 rounded-b-md transition-all duration-300 transform -translate-y-5 opacity-0">
            
            <%= link_to "Home", root_path, class: "block px-4 py-2 text-[#F97316]" %>
            <%= link_to "Browse Menu", public_foods_path, class: "block px-4 py-2 text-[#F97316]" %>

            <% if user_signed_in? %>
              <%= link_to "My Orders", orders_path, class: "block px-4 py-2 text-[#F97316]" %>
              <%= link_to "Conversations", users_conversations_path, class: "block px-4 py-2 text-[#F97316]" %>
              <%= button_to "Logout", destroy_user_session_path, method: :delete, form_class: "block w-full text-left", class: "block px-4 py-2 text-[#F97316]" %>
            <% end %>

            <!-- Cart -->
            <div id="cart-count" class="px-4 py-2">
              <% if current_cart.present? && current_cart.cart_items.any? %>
                <%= link_to cart_path, class: "relative text-[#F97316]" do %>
                  <i class="fas fa-shopping-cart text-lg"></i>
                  <%= render "carts/cart_count", cart: current_cart %>
                <% end %>
              <% else %>
                <%= link_to cart_path, class: "relative text-[#F97316]" do %>
                  <i class="fas fa-shopping-cart text-lg"></i>
                <% end %>
              <% end %>
            </div>
          </nav>
        </div>
      </header>
    </turbo-frame>

    <!-- ✅ Page Content -->
    <main class="min-h-screen">
      <%= yield %>
    </main>
  </body>
</html>
