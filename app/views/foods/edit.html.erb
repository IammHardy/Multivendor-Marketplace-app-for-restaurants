<h1>Edit Food</h1>

<%= form_with model: @food, local: true do |form| %>
  <div>
    <%= form.label :name, "Food Name" %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <p>Select Categories:</p>
    <% @categories.each do |category| %>
      <div>
        <%= check_box_tag "food[category_ids][]", category.id, @food.categories.include?(category) %>
        <%= label_tag "food_category_ids_#{category.id}", category.name %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.submit "Update Food" %>
  </div>
<% end %>

<%= link_to "Back to Home", root_path %>
