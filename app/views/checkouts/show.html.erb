<main class="bg-[#FFF7E5] min-h-screen px-6 py-12">

  <div class="max-w-3xl mx-auto bg-white rounded-2xl shadow-lg p-8">

    <h1 class="text-3xl font-extrabold text-[#F97316] mb-8 text-center animate-fade-in">Checkout</h1>

    <!-- Cart Items -->
    <div class="mb-8 animate-fade-in delay-100">
      <h2 class="text-2xl font-semibold mb-4">Your Order</h2>
      <ul class="space-y-3">
        <% @cart.cart_items.each do |item| %>
          <li class="flex justify-between items-center bg-[#FFF1E0] p-4 rounded-xl shadow-sm hover:shadow-md transition animate-fade-in">
            <span class="font-medium text-[#F97316]"><%= item.food.name %> (x<%= item.quantity %>)</span>
            <span class="font-semibold text-[#F97316]">₦<%= number_to_currency(item.food.price * item.quantity, unit: "", precision: 0) %></span>
          </li>
        <% end %>
      </ul>
      <p class="text-right mt-4 text-xl font-bold text-gray-800">Total: ₦<%= number_to_currency(@cart.cart_items.sum { |item| item.food.price * item.quantity }, unit: "", precision: 0) %></p>
    </div>

    <<!-- Checkout Form -->
<div class="animate-fade-in delay-200">
  <h2 class="text-2xl font-semibold mb-6">Delivery Information</h2>
  <%= form_with model: @order, url: checkout_path, local: true, class: "space-y-5" do |form| %>
    <div>
      <%= form.label :name, "Full Name", class: "block mb-2 font-medium text-gray-700" %>
      <%= form.text_field :name, class: "w-full border rounded-xl p-3 focus:outline-none focus:ring-2 focus:ring-[#F97316]" %>
    </div>
    <div>
      <%= form.label :address, "Delivery Address", class: "block mb-2 font-medium text-gray-700" %>
      <%= form.text_area :address, rows: 3, class: "w-full border rounded-xl p-3 focus:outline-none focus:ring-2 focus:ring-[#F97316]" %>
    </div>
    <div>
      <%= form.label :phone, "Phone Number", class: "block mb-2 font-medium text-gray-700" %>
      <%= form.text_field :phone, class: "w-full border rounded-xl p-3 focus:outline-none focus:ring-2 focus:ring-[#F97316]" %>
    </div>
    <div class="text-center mt-6">
      <%= form.submit "Place Order", class: "bg-[#F97316] text-white font-bold py-3 px-8 rounded-full shadow-lg hover:bg-orange-500 transition" %>
    </div>
  <% end %>
</div>


