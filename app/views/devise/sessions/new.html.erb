<main class="auth-container min-h-screen flex items-center justify-center bg-gradient-to-br from-orange-50 via-orange-100 to-yellow-50 p-6">
  <div class="auth-box bg-white rounded-3xl shadow-2xl p-8 w-full max-w-md">

    <!-- Title -->
    <h2 class="text-3xl font-extrabold text-center text-orange-600 mb-6">
      Welcome Back ðŸ‘‹
    </h2>
    <p class="text-center text-gray-600 mb-6">
      Log in to continue your journey
    </p>

    <!-- Login Form -->
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Email -->
      <div class="mb-4">
        <%= f.label :email, class: "block font-semibold mb-1 text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full border border-gray-200 rounded-xl px-4 py-3 text-gray-700 focus:ring-2 focus:ring-orange-300 focus:outline-none shadow-sm" %>
      </div>

      <!-- Password -->
      <div class="mb-4">
        <%= f.label :password, class: "block font-semibold mb-1 text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password",
              class: "w-full border border-gray-200 rounded-xl px-4 py-3 text-gray-700 focus:ring-2 focus:ring-orange-300 focus:outline-none shadow-sm" %>
      </div>

      <!-- Remember Me -->
      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center">
          <%= f.check_box :remember_me, class: "mr-2 h-4 w-4 text-orange-600 border-gray-300 rounded focus:ring-orange-400" %>
          <%= f.label :remember_me, class: "text-gray-700 text-sm" %>
        </div>
      <% end %>

      <!-- Submit -->
      <div class="mb-6">
        <%= f.submit "Log In",
              class: "w-full bg-orange-500 hover:bg-orange-600 text-white py-3 rounded-full font-bold shadow-md transition" %>
      </div>
    <% end %>

    <!-- Divider -->
    <div class="flex items-center my-6">
      <div class="flex-grow h-px bg-gray-200"></div>
      <span class="px-4 text-gray-500 text-sm">Or sign in with</span>
      <div class="flex-grow h-px bg-gray-200"></div>
    </div>

    <!-- OAuth Buttons -->
    <div class="flex flex-col gap-3">
      <% if devise_mapping.omniauthable? %>
        <% resource_class.omniauth_providers.each do |provider| %>
          <%= link_to omniauth_authorize_path(resource_name, provider),
                class: "flex items-center justify-center gap-2 px-4 py-3 rounded-full font-semibold shadow-sm border hover:shadow-md transition #{provider == :google_oauth2 ? 'bg-white text-gray-700 border-gray-200 hover:bg-gray-50' : ''} #{provider == :facebook ? 'bg-blue-600 text-white hover:bg-blue-700' : ''} #{provider == :tiktok ? 'bg-black text-white hover:bg-gray-900' : ''}" do %>
            
            <% case provider %>
            <% when :google_oauth2 %>
              <i class="fab fa-google"></i> Sign in with Google
            <% when :facebook %>
              <i class="fab fa-facebook-f"></i> Sign in with Facebook
            <% when :tiktok %>
              <i class="fab fa-tiktok"></i> Sign in with TikTok
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </div>

    <!-- Other Devise Links -->
    <div class="mt-6 text-center text-gray-500 text-sm space-y-1">
      <%= render "devise/shared/links" %>
    </div>
    
  </div>
</main>
