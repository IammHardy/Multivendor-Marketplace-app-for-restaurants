<div class="auth-container min-h-screen flex items-center justify-center bg-gray-50 p-6">
  <div class="auth-box bg-white rounded-2xl shadow-2xl p-8 w-full max-w-md">
    <h2 class="text-3xl font-extrabold text-center text-red-600 mb-6">Create Your Account ðŸ‘‹</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Email -->
      <div class="mb-4">
        <%= f.label :email, class: "block font-semibold mb-1 text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-red-300 focus:outline-none" %>
      </div>

      <!-- Password -->
      <div class="mb-4">
        <%= f.label :password, class: "block font-semibold mb-1 text-gray-700" %>
        <% if @minimum_password_length %>
          <small class="text-gray-500">(<%= @minimum_password_length %> characters minimum)</small>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password",
              class: "w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-red-300 focus:outline-none" %>
      </div>

      <!-- Password Confirmation -->
      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block font-semibold mb-1 text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-red-300 focus:outline-none" %>
      </div>

      <!-- Submit -->
      <div class="mb-6">
        <%= f.submit "Sign Up", class: "w-full bg-red-600 text-white py-3 rounded-lg font-bold hover:bg-red-700 transition" %>
      </div>
    <% end %>

    <div class="text-center mb-4 text-gray-500">Or sign up with</div>

    <!-- OAuth Buttons -->
    <div class="flex flex-col gap-4 mt-6">
      <% if devise_mapping.omniauthable? %>
        <% resource_class.omniauth_providers.each do |provider| %>
          <%= link_to omniauth_authorize_path(resource_name, provider),
                      class: "flex items-center justify-center gap-2 py-3 rounded-lg font-semibold transition w-full #{provider}-btn" do %>
            <% case provider %>
            <% when :google_oauth2 %>
              <i class="fab fa-google"></i> Sign up with Google
            <% when :facebook %>
              <i class="fab fa-facebook-f"></i> Sign up with Facebook
            <% when :tiktok %>
              <i class="fab fa-tiktok"></i> Sign up with TikTok
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </div>

    <!-- Other Devise Links -->
    <div class="mt-6 text-center text-gray-500 text-sm space-y-1">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<style>
.google-btn {
  @apply bg-blue-600 hover:bg-blue-700 text-white;
}

.facebook-btn {
  @apply bg-blue-800 hover:bg-blue-900 text-white;
}

.tiktok-btn {
  @apply bg-black hover:bg-gray-800 text-white;
}
</style>
