<turbo-frame id="modal">
  <div class="fixed inset-0 bg-black/40 flex items-center justify-center z-50">
    <div class="bg-white rounded-2xl p-6 shadow-xl max-w-md w-full text-center">
      <h2 class="text-lg font-semibold mb-3 text-gray-800">
        Switch vendor?
      </h2>
      <p class="text-gray-600 mb-6">
        You already have items from another vendor in your cart.  
        Do you want to clear your cart and add <strong><%= food.name %></strong> from this vendor instead?
      </p>

      <div class="flex justify-center gap-4">
        <%= button_to "Yes, switch",
  cart_items_path(food_id: food.id, confirm_vendor_switch: "true"),
  method: :post,
  data: { turbo_frame: "_top" },
  class: "bg-orange-500 text-white px-4 py-2 rounded-lg hover:bg-orange-600" %>


        <button data-action="click->modal#close" class="bg-gray-300 px-4 py-2 rounded-lg hover:bg-gray-400">
          Cancel
        </button>
      </div>
    </div>
  </div>
</turbo-frame>
