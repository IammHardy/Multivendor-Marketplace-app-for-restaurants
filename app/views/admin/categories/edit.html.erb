<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md mt-6">
  <h1 class="text-2xl font-bold mb-6 text-red-600">Edit Category</h1>

  <%= form_with model: [:admin, @category], local: true do |form| %>
    <div class="mb-4">
      <%= form.label :name, "Category Name", class: "block text-gray-700 font-semibold mb-1" %>
      <%= form.text_field :name, class: "w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-red-600" %>
    </div>

    <div class="mb-4">
      <%= form.label :parent_id, "Parent Category (optional)", class: "block text-gray-700 font-semibold mb-1" %>
      <%= form.collection_select :parent_id, Category.where.not(id: @category.id), :id, :name, { prompt: "None" }, class: "w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-red-600" %>
    </div>

    <div class="flex flex-col sm:flex-row gap-3 mt-6">
      <%= form.submit "Update Category", class: "bg-red-600 hover:bg-red-500 text-white font-semibold px-4 py-2 rounded transition" %>
      <%= link_to "Cancel", admin_categories_path, class: "bg-gray-500 hover:bg-gray-400 text-white font-semibold px-4 py-2 rounded transition text-center" %>
    </div>
  <% end %>
</div>
