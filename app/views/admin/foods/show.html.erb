<div class="max-w-2xl mx-auto mt-8 bg-white p-6 rounded shadow">
  <h1 class="text-3xl font-bold text-red-600 mb-4"><%= @food.name %></h1>

  <p class="mb-2"><span class="font-semibold">Description:</span> <%= @food.description.presence || "No description provided." %></p>
  <p class="mb-2"><span class="font-semibold">Price:</span> ₦<%= number_to_currency(@food.price, unit: "", precision: 2) %></p>

  <% if @food.image.attached? %>
    <p class="font-semibold mb-2">Image:</p>
    <%= image_tag url_for(@food.image), class: "w-full max-w-md rounded mb-4 shadow" %>
  <% else %>
    <p class="text-gray-500 mb-4">No image uploaded.</p>
  <% end %>

  <p class="font-semibold mb-2">Categories:</p>
  <% if @food.categories.any? %>
    <ul class="list-disc list-inside mb-4">
      <% @food.categories.each do |category| %>
        <li><%= link_to category.name, category_path(category), class: "text-red-600 hover:underline" %></li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-500 mb-4">No categories assigned to this food yet.</p>
  <% end %>

  <% if current_user&.admin? %>
    <%= link_to "Edit Food", edit_admin_food_path(@food), class: "bg-red-600 text-white px-4 py-2 rounded hover:bg-red-500 transition" %>
  <% end %>

  <div class="mt-4">
    <%= link_to "← Back to Categories", categories_path, class: "text-gray-600 hover:underline" %>
  </div>
</div>
