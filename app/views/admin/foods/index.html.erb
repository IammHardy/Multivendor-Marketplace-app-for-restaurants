<h1 class="text-2xl font-bold text-red-600 mb-6">All Foods (by Vendors)</h1>

<table class="min-w-full bg-white shadow rounded-lg overflow-hidden">
  <thead class="bg-gray-100">
    <tr>
      <th class="px-4 py-2 text-left">Food</th>
      <th class="px-4 py-2 text-left">Vendor</th>
      <th class="px-4 py-2 text-left">Price</th>
      <th class="px-4 py-2 text-left">Category</th>
      <th class="px-4 py-2 text-left">Created</th>
      <th class="px-4 py-2 text-center">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
      <tr class="border-b hover:bg-gray-50">
        <td class="px-4 py-2"><%= food.name %></td>
        <td class="px-4 py-2"><%= food.vendor&.name %></td>
        <td class="px-4 py-2">â‚¦<%= food.price %></td>
        <td class="px-4 py-2"><%= food.categories.map(&:name).join(", ") %></td>
        <td class="px-4 py-2"><%= food.created_at.strftime("%b %d, %Y") %></td>
        <td class="px-4 py-2 text-center">
          <%= link_to "Delete", admin_food_path(food),
              method: :delete,
              data: { confirm: "Are you sure you want to remove this food?" },
              class: "text-red-600 hover:underline" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
