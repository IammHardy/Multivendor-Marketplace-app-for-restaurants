<div class="max-w-4xl mx-auto mt-8">
  <h1 class="text-2xl font-bold text-red-600 mb-6">Manage Foods</h1>

  <div class="mb-6">
    <%= link_to "âž• Add Food", new_admin_food_path, class: "bg-red-600 text-white px-4 py-2 rounded hover:bg-red-500 transition" %>
  </div>

  <% if @foods.any? %>
    <div class="flex flex-col gap-4">
      <% @foods.each do |food| %>
        <div class="flex justify-between items-center bg-white p-4 rounded shadow border border-gray-100">
          <div class="font-semibold"><%= food.name %></div>
          <div class="flex gap-2">
            <%= link_to "Edit", edit_admin_food_path(food), class: "bg-gray-600 text-white px-3 py-1 rounded hover:bg-gray-500 transition text-sm" %>
            <%= link_to "Delete", admin_food_path(food), method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-600 text-white px-3 py-1 rounded hover:bg-red-500 transition text-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500">No foods available yet.</p>
  <% end %>
</div>
