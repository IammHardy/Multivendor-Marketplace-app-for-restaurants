<%= form_with(model: [:admin, @food], local: true, html: { class: "space-y-6 max-w-2xl mx-auto bg-white p-6 rounded-xl shadow" }) do |form| %>
  <% if @food.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 p-4 rounded">
      <h2 class="font-semibold mb-2">
        <%= pluralize(@food.errors.count, "error") %> prohibited this food from being saved:
      </h2>
      <ul class="list-disc list-inside">
        <% @food.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block font-semibold mb-1 text-gray-700" %>
    <%= form.text_field :name, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-red-600" %>
  </div>

  <div>
    <%= form.label :description, class: "block font-semibold mb-1 text-gray-700" %>
    <%= form.text_area :description, rows: 4, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-red-600" %>
  </div>

  <div>
    <%= form.label :price, class: "block font-semibold mb-1 text-gray-700" %>
    <%= form.number_field :price, step: 0.01, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-red-600" %>
  </div>

  <div>
    <%= form.label :image, class: "block font-semibold mb-1 text-gray-700" %>
    <%= form.file_field :image, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-red-600" %>
  </div>

  <div>
    <%= form.label :category_ids, "Select Categories", class: "block font-semibold mb-1 text-gray-700" %>
    <%= form.collection_select :category_ids, Category.all.order(:name), :id, :name, { prompt: "Choose..." }, { multiple: true, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-red-600" } %>
  </div>

  <div class="flex flex-col sm:flex-row gap-3 mt-4">
    <%= form.submit class: "bg-red-600 hover:bg-red-500 text-white font-bold px-5 py-2 rounded-lg transition" %>
    <%= link_to "Cancel", admin_foods_path, class: "bg-gray-500 hover:bg-gray-400 text-white font-bold px-5 py-2 rounded-lg text-center transition" %>
  </div>
<% end %>
