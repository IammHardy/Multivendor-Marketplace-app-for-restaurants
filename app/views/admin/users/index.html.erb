<div class="max-w-4xl mx-auto mt-10 p-8 bg-white rounded-2xl shadow-lg">
  <h1 class="text-3xl font-extrabold text-[#F97316] mb-8">Users</h1>

  <!-- Search Form -->
  <div class="mb-8">
    <%= search_form_for @q, url: admin_users_path, method: :get, html: { class: "flex flex-wrap gap-3 items-center" } do |f| %>
      <%= f.label :email_cont, "Search by Email", class: "sr-only" %>
      <%= f.search_field :email_cont, placeholder: "Enter user email", class: "border rounded-lg px-4 py-2 w-full sm:w-64 focus:ring focus:ring-[#FACC15] focus:outline-none" %>
      <%= f.submit "Search", class: "bg-[#F97316] hover:bg-[#E65C00] text-white font-semibold px-5 py-2 rounded-lg transition shadow" %>
    <% end %>
  </div>

  <!-- Users Table -->
  <div class="overflow-x-auto rounded-xl shadow">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Email</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Created At</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @users.each do |user| %>
          <tr class="hover:bg-gray-50 transition">
            <td class="px-6 py-3 text-gray-800 font-medium"><%= user.email %></td>
            <td class="px-6 py-3 text-gray-600"><%= user.created_at.strftime("%b %d, %Y") %></td>
            <td class="px-6 py-3 flex gap-2">
              <%= link_to "View", admin_user_path(user), class: "bg-[#FACC15] hover:bg-yellow-400 text-gray-800 px-4 py-1 rounded-lg font-medium transition shadow" %>
              <%= link_to "Delete", admin_user_path(user), method: :delete, data: { confirm: "Are you sure?" }, class: "bg-[#F97316] hover:bg-[#E65C00] text-white px-4 py-1 rounded-lg font-medium transition shadow" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <div class="mt-6 flex justify-end">
    <%= paginate @users %>
  </div>
</div>
