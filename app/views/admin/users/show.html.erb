<h1 class="text-2xl font-bold mb-4">User Details</h1>

<div class="bg-white shadow rounded p-4">
  <p><strong>ID:</strong> <%= @user.id %></p>
  <p><strong>Email:</strong> <%= @user.email %></p>
  <p><strong>Role:</strong> <%= @user.admin? ? "Admin" : "User" %></p>
  <p><strong>Joined:</strong> <%= @user.created_at.strftime("%B %d, %Y %H:%M") %></p>
</div>

<div class="mt-4">
  <%= link_to "Back to Users", admin_users_path, class: "px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700" %>
  <%= link_to "Delete User", admin_user_path(@user), 
              method: :delete, 
              data: { confirm: "Are you sure you want to delete this user?" }, 
              class: "px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 ml-2" %>
</div>
