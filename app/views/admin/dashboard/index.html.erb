<div class="min-h-screen bg-gray-50 p-6">

  <!-- Dashboard Header -->
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-extrabold text-gray-800">Admin Dashboard</h1>
  </div>

  <!-- Top Summary Cards -->
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6 mb-8">
    <%# Total Vendors %>
    <div class="bg-white shadow-lg rounded-2xl p-6 border-t-4 border-red-500 hover:shadow-xl transition">
      <h2 class="text-gray-500 font-medium">Total Vendors</h2>
      <p class="text-2xl font-bold text-red-600 mt-2"><%= @total_vendors %></p>
    </div>

    <%# Active Vendors %>
    <div class="bg-white shadow-lg rounded-2xl p-6 border-t-4 border-blue-500 hover:shadow-xl transition">
      <h2 class="text-gray-500 font-medium">Active Vendors</h2>
      <p class="text-2xl font-bold text-blue-600 mt-2"><%= @active_vendors %></p>
    </div>

    <%# Pending Vendors %>
    <div class="bg-white shadow-lg rounded-2xl p-6 border-t-4 border-yellow-400 hover:shadow-xl transition">
      <h2 class="text-gray-500 font-medium">Pending Approval</h2>
      <p class="text-2xl font-bold text-yellow-600 mt-2"><%= @pending_vendors %></p>
    </div>

    <%# Total Orders %>
    <div class="bg-white shadow-lg rounded-2xl p-6 border-t-4 border-green-500 hover:shadow-xl transition">
      <h2 class="text-gray-500 font-medium">Total Orders</h2>
      <p class="text-2xl font-bold text-green-600 mt-2"><%= @total_orders %></p>
    </div>

    <%# Total Commission %>
    <div class="bg-white shadow-lg rounded-2xl p-6 border-t-4 border-green-600 hover:shadow-xl transition">
      <h2 class="text-gray-500 font-medium">Total Commission</h2>
      <p class="text-2xl font-bold text-green-700 mt-2">₦<%= number_with_precision(@total_platform_commission, precision: 2) %></p>
    </div>
  </div>

  <!-- Vendor Stats Table -->
  <div class="bg-white shadow-lg rounded-2xl p-6">
    <h3 class="text-xl font-bold text-gray-700 mb-4">Vendor Earnings & Commission</h3>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200 text-sm">
        <thead class="bg-gray-50 text-gray-500 uppercase text-xs tracking-wider">
          <tr>
            <th class="px-4 py-3 text-left">Vendor</th>
            <th class="px-4 py-3 text-left">Total Orders</th>
            <th class="px-4 py-3 text-left">Total Order Item Price</th>
            <th class="px-4 py-3 text-left">Vendor Earnings</th>
            <th class="px-4 py-3 text-left">Admin Commission</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @vendor_stats.each do |stat| %>
            <tr class="hover:bg-gray-50 transition">
              <td class="px-4 py-3 font-medium text-gray-800"><%= stat[:vendor].name %></td>
              <td class="px-4 py-3"><%= stat[:total_orders] %></td>
              <td class="px-4 py-3 text-gray-700">₦<%= number_with_precision(stat[:total_price], precision: 2) %></td>
              <td class="px-4 py-3 text-green-600 font-bold">₦<%= number_with_precision(stat[:total_earning], precision: 2) %></td>
              <td class="px-4 py-3 text-yellow-600 font-bold">₦<%= number_with_precision(stat[:total_commission], precision: 2) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
