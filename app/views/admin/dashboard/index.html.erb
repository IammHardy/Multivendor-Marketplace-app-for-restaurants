<div class="min-h-screen bg-gray-100 p-6">

  <!-- Dashboard Header -->
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-3xl font-bold text-gray-700">Admin Dashboard</h1>
  </div>

  <!-- Top Summary Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-6 mb-6">
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-gray-500 font-medium">Total Vendors</h2>
      <p class="text-2xl font-bold text-red-600 mt-2"><%= @total_vendors %></p>
    </div>

    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-gray-500 font-medium">Active Vendors</h2>
      <p class="text-2xl font-bold text-red-600 mt-2"><%= @active_vendors %></p>
    </div>

    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-gray-500 font-medium">Pending Approval</h2>
      <p class="text-2xl font-bold text-red-600 mt-2"><%= @pending_vendors %></p>
    </div>

    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-gray-500 font-medium">Total Orders</h2>
      <p class="text-2xl font-bold text-red-600 mt-2"><%= @total_orders %></p>
    </div>

    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-gray-500 font-medium">Total Commission</h2>
      <p class="text-2xl font-bold text-red-600 mt-2">₦<%= number_with_precision(@total_platform_commission, precision: 2) %></p>
    </div>
  </div>

  <!-- Vendors Table -->
  <div class="bg-white shadow rounded-lg p-6">
    <h3 class="text-xl font-bold text-gray-700 mb-4">Vendor Earnings & Commission</h3>
    <table class="min-w-full divide-y divide-gray-200">
      <thead>
        <tr class="bg-gray-50">
          <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Vendor</th>
          <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Total Orders</th>
          <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Vendor Earnings</th>
          <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Admin Commission</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @vendor_stats.each do |stat| %>
          <tr>
            <td class="px-4 py-2 flex items-center gap-3">

  <span class="font-medium text-gray-700"><%= stat[:vendor].name %></span>
</td>

            <td class="px-4 py-2"><%= stat[:total_orders] %></td>
            <td class="px-4 py-2">₦<%= number_with_precision(stat[:total_earning], precision: 2) %></td>
            <td class="px-4 py-2">₦<%= number_with_precision(stat[:total_commission], precision: 2) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
