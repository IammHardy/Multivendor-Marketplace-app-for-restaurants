<div class="max-w-3xl mx-auto mt-10 p-6 bg-white rounded-lg shadow">
  <h2 class="text-3xl font-bold text-gray-700 mb-6">Edit Vendor</h2>

  <%= form_with(model: [:admin, @vendor], local: true, html: { multipart: true }) do |f| %>

    <!-- Name -->
    <div class="mb-4">
      <%= f.label :name, class: "block font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name, class: "w-full border border-gray-300 rounded-lg p-2 focus:ring-2 focus:ring-[#F97316] focus:border-[#F97316] transition" %>
    </div>

    <!-- Email -->
    <div class="mb-4">
      <%= f.label :email, class: "block font-medium text-gray-700 mb-1" %>
      <%= f.email_field :email, class: "w-full border border-gray-300 rounded-lg p-2 focus:ring-2 focus:ring-[#F97316] focus:border-[#F97316] transition" %>
    </div>

    <!-- Phone -->
    <div class="mb-4">
      <%= f.label :phone, class: "block font-medium text-gray-700 mb-1" %>
      <%= f.text_field :phone, class: "w-full border border-gray-300 rounded-lg p-2 focus:ring-2 focus:ring-[#F97316] focus:border-[#F97316] transition" %>
    </div>

    <!-- Status -->
    <div class="mb-4">
      <%= f.label :status, class: "block font-medium text-gray-700 mb-1" %>
      <%= f.select :status, Vendor.statuses.keys.map { |s| [s.titleize, s] },
                   {}, class: "w-full border border-gray-300 rounded-lg p-2 focus:ring-2 focus:ring-[#F97316] focus:border-[#F97316] transition" %>
    </div>

    <!-- Bio -->
    <div class="mb-4">
      <%= f.label :bio, class: "block font-medium text-gray-700 mb-1" %>
      <%= f.text_area :bio, class: "w-full border border-gray-300 rounded-lg p-2 focus:ring-2 focus:ring-[#F97316] focus:border-[#F97316] transition", rows: 4 %>
    </div>

    <!-- Profile Image -->
    <div class="mb-4">
      <%= f.label :profile_image, class: "block font-medium text-gray-700 mb-1" %>
      <%= f.file_field :profile_image, class: "w-full" %>
      <% if @vendor.profile_image.attached? %>
        <div class="mt-2">
          <p class="text-sm text-gray-500">Current Profile Image:</p>
          <%= image_tag @vendor.profile_image.variant(resize_to_limit: [200, 200]), class: "rounded-lg shadow" %>
        </div>
      <% end %>
    </div>

    <!-- Banner Image -->
    <div class="mb-4">
      <%= f.label :banner_image, class: "block font-medium text-gray-700 mb-1" %>
      <%= f.file_field :banner_image, class: "w-full" %>
      <% if @vendor.banner_image.attached? %>
        <div class="mt-2">
          <p class="text-sm text-gray-500">Current Banner Image:</p>
          <%= image_tag @vendor.banner_image.variant(resize_to_limit: [600, 200]), class: "rounded-lg shadow" %>
        </div>
      <% end %>
    </div>

    <!-- Submit Button -->
    <div class="mt-6">
      <%= f.submit "Update Vendor",
            class: "px-6 py-3 bg-[#F97316] hover:bg-[#E65C00] text-white font-semibold rounded-lg shadow transition" %>
    </div>

  <% end %>
</div>
