<h1>Order Summary</h1>

<p><strong>Name:</strong> <%= @order.name %></p>
<p><strong>Address:</strong> <%= @order.address %></p>
<p><strong>Phone:</strong> <%= @order.phone %></p>
<p><strong>Email:</strong> <%= @order.user.email if @order.user %></p>

<p>
  <strong>Status:</strong>
  <% case @order.status.downcase %>
  <% when "pending" %>
    <span style="color: orange; font-weight: bold;">Pending</span>
  <% when "processing" %>
    <span style="color: green; font-weight: bold;">Paid</span>
  <% else %>
    <span><%= @order.status.capitalize %></span>
  <% end %>
</p>

<h2>Items</h2>
<ul>
  <% @order.order_items.each do |item| %>
    <li>
      <%= item.food.name %> — Quantity: <%= item.quantity %> —
      Total: ₦<%= number_to_currency(item.price * item.quantity, unit: "", precision: 2) %>
    </li>
  <% end %>
</ul>

<hr>
<p>
  <strong>Grand Total:</strong>
  ₦<%= number_to_currency(@order.total_price, unit: "", precision: 2) %>
</p>

<% if @order.status.downcase != "processing" %>
  <%= button_to "Mark as Paid", admin_mark_paid_path(@order), method: :patch, class: "btn btn-success" %>
<% end %>
<%= link_to "Delete Order", admin_order_path(@order), method: :delete, data: { confirm: "Are you sure you want to delete this order?" }, class: "bg-red-500 text-white px-4 py-2 rounded" %>



<%= link_to "Back to Orders", admin_orders_path, class: "btn btn-secondary mt-3" %>
