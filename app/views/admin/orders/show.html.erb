<h1 class="text-2xl font-bold mb-6">Order Details: #<%= @order.id %></h1>

<!-- Customer Info -->
<div class="mb-6 p-4 border rounded bg-gray-50">
  <h2 class="text-xl font-semibold mb-2">Customer Information</h2>
  <p><strong>Name:</strong> <%= @order.user&.name || "N/A" %></p>
  <p><strong>Email:</strong> <%= @order.user&.email || "N/A" %></p>
</div>

<!-- Vendors Info -->
<div class="mb-6 p-4 border rounded bg-gray-50">
  <h2 class="text-xl font-semibold mb-2">Vendor(s)</h2>
  <% vendors = @order.order_items.includes(:food => :vendor).map { |item| item.food.vendor }.uniq.compact %>
  <% if vendors.any? %>
    <ul>
      <% vendors.each do |vendor| %>
        <li><%= vendor.name %></li>
      <% end %>
    </ul>
  <% else %>
    <p>N/A</p>
  <% end %>
</div>

<!-- Order Items -->
<div class="mb-6 p-4 border rounded bg-gray-50">
  <h2 class="text-xl font-semibold mb-2">Order Items</h2>
  <% if @order.order_items.any? %>
    <table class="table-auto w-full border">
      <thead>
        <tr class="bg-gray-200">
          <th class="px-4 py-2">Food</th>
          <th class="px-4 py-2">Vendor</th>
          <th class="px-4 py-2">Quantity</th>
          <th class="px-4 py-2">Price</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_items.includes(:food => :vendor).each do |item| %>
          <tr class="border-b">
            <td class="px-4 py-2"><%= item.food&.name || "N/A" %></td>
            <td class="px-4 py-2"><%= item.food&.vendor&.name || "N/A" %></td>
            <td class="px-4 py-2"><%= item.quantity %></td>
            <td class="px-4 py-2">$<%= item.price || item.food&.price || 0 %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No items in this order.</p>
  <% end %>
</div>

<!-- Order Summary -->
<div class="mb-6 p-4 border rounded bg-gray-50">
  <h2 class="text-xl font-semibold mb-2">Summary</h2>
  <p><strong>Total Price:</strong> $<%= @order.total_price || 0 %></p>
  <p><strong>Status:</strong> <%= @order.status || "N/A" %></p>
</div>

<%= link_to "Back to Orders", admin_orders_path, class: "px-4 py-2 bg-gray-300 rounded hover:bg-gray-400" %>
